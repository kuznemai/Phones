<script setup>
import {createdCartStore} from "../store.js";
import CartItem from "./CartItem.vue";
import {inject} from "vue";

const { cart, removeItemFromCart } = inject('cart')

const cartStore = createdCartStore()
</script>

<template>
  <div class="flex flex-col flex-1 gap-4" v-auto-animate>
    <CartItem v-for="item in cartStore.cart"
              :key="item.id"
              :title="item.title"
              :price="item.price"
              :image-url="item.imageUrl"
              :quantity="item.quantity"
              @removeItemFromCart="() => removeItemFromCart(cartStore.cart.indexOf(item))"
    />
  </div>

</template>